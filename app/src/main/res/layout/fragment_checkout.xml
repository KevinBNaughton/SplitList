<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/gradient_peach"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkout_recyclerview">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout">

        <Button
            android:id="@+id/complete_button"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="11dp"
            android:layout_toStartOf="@+id/personal_total"
            android:layout_toEndOf="@+id/group_total"
            android:background="@color/colorPrimary"
            android:text="Finalize"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/normal_margin"
            android:text="Group Total: "
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/personal_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/normal_margin"
            android:text="Your Total: "
            android:textColor="@color/Black"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>