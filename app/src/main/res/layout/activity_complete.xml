<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.CompleteActivity"
    android:background="@drawable/gradient_ninety">

    <TextView
        android:id="@+id/final_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_margin="@dimen/large_margin"
        android:textColor="@color/Black"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Allison: $13.00"/>

    <Button
        android:id="@id/complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Order"
        android:layout_below="@+id/final_display"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/Peach0"
        android:padding="@dimen/normal_margin"/>

</RelativeLayout>